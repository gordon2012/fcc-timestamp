{
    "name": "fcc-timestamp",
    "version": 2,
    "builds": [
        { "src": "public/server.js", "use": "@now/node-server" },
        { "src": "public/client.js", "use": "@now/static" }
    ],

    "routes": [
        {
            "src": "/api/timestamp",
            "dest": "/public/server.js",
            "methods": ["GET"]
        },
        {
            "src": "/api/timestamp/(.*)",
            "dest": "/public/server.js",
            "methods": ["GET"]
        },
        {
            "src": "/",
            "headers": {
                "cache-control": "s-maxage=0"
            },
            "dest": "/public/server.js"
        },
        { "src": "/client.js", "dest": "/public/client.js" }
    ]
}
